@{
    Web_Shoe_PTWeb.Models.OrderDetail orderDetails = ViewBag.chitietdonhang;
}
@model Web_Shoe_PTWeb.Models.OrderDetail

<div id="templatemo_content">
    <div class="content_section">
        <h2>Order Detail @ViewBag.donhang.Id</h2>

        <table id="customers">
            <thead class="thead-dark">
                <tr>
                    @*<th scope="col">#</th>*@
                    <th scope="col">Product</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Price</th>

                    @*<th scope="col"></th>*@
                </tr>
            </thead>
            <tbody>

                <tr>
                    
                    <td>@orderDetails.Product</td>
                    <td>@orderDetails.Quantity</td>
                    <td>$@orderDetails.Price.00</td>
                   
                    @*<td><a asp-controller="Order" asp-action="Detail" asp-route-id="@item.OrderId">View Detail Order</a></td>*@
                </tr>

            </tbody>
        </table>
    </div>
</div>
