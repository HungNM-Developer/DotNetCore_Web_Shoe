@model List<Web_Shoe_PTWeb.Models.CartItem>

<h2>GIỎ HÀNG</h2>

@if (Model.Count > 0)
{

    <table class="table">
        <tr>

            <th>Sản phẩm</th>
            <th>Giá</th>
            <th>Giá giảm</th>
            <th>Số lượng</th>
            <th>Thành tiền</th>
            <th></th>
        </tr>
        @foreach (var cartitem in Model)
        {

            <tr>

                <td>@cartitem.Product.Name</td>
                <td>@cartitem.Product.Price</td>
                <td>@cartitem.Product.PromationPrice</td>
                <td><input type="number"
                           min="1"
                           max="@cartitem.Product.Quanity" 
                           asp-for="@cartitem.Amount" 
                           id="@($"quantity-{cartitem.Product.ProductId}")" />
                </td>
                <td>@cartitem.TotalMoney</td>
                <td>

                    <button class="btn btn-success updatecartitem"
                            data-productid="@cartitem.Product.ProductId">
                        Cập nhật
                    </button>
                    <a asp-route="removecart" asp-route-productid="@cartitem.Product.ProductId"
                       class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
        <tr>
            <td colspan="4" class="text-right">Tổng tiền</td>
            <td>@ViewBag.total</td>
            <td></td>
        </tr>
    </table>

    <a asp-controller="Product" asp-action="Checkout" class="btn btn-success">Gửi đơn hàng</a>

    @section Scripts {
        <script>
          $(document).ready(function () {
              $(".updatecartitem").click(function (event) {
                  event.preventDefault();
                  var productid = $(this).attr("data-productid");
                  var quantity = $("#quantity-" + productid).val();
                  $.ajax({
                      type: "POST",
                      url:"@Url.RouteUrl("updatecart")",
                      data: {
                          productid: productid,
                          quantity:quantity
                      },
                      success: function (result) {
                          window.location.href = "@Url.RouteUrl("cart")";
                      }
                  });
              });
          });
        </script>
    }

}
else
{
    <p class="alert alert-danger">Giỏ hàng trống</p>
}
