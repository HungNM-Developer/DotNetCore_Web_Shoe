                                </a>
                            </div>
                            <div class="SlideItMoo_element">
                                <a href="#">
                                    <img src="~/images/templatemo_product_08.png" alt="product 8" />
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

            </div> <!-- end of latest_product_slider -->

        </div> <!-- end of templatemo_slider -->

    </div> <!-- end of templatemo_slider_wrapper -->


    <div style="width: 940px; height: 800px; background-color: white;display:flex;justify-content:center;margin: 0 auto;">
        @RenderBody()
